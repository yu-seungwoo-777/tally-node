{
  "name": "@tally-node/screenshots",
  "version": "1.0.0",
  "description": "Screenshot capture and validation tools for Tally Node Web UI documentation",
  "private": true,
  "type": "module",
  "scripts": {
    "screenshot:capture": "tsx capture-screenshots.ts",
    "screenshot:mask": "tsx privacy-masking.ts",
    "screenshot:test": "jest --validate-screenshots.test.ts",
    "screenshot:all": "npm run screenshot:capture && npm run screenshot:mask && npm run screenshot:test"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "canvas": "^2.11.2",
    "image-size": "^1.0.2",
    "png.js": "^0.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  }
}
