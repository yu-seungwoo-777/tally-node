# Flash 설정
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="4MB"

# 로그 설정 - 완전 비활성화 (0=없음)
CONFIG_LOG_DEFAULT_LEVEL_NONE=y
CONFIG_LOG_DEFAULT_LEVEL=0
CONFIG_BOOTLOADER_LOG_LEVEL_NONE=y
CONFIG_BOOTLOADER_LOG_LEVEL=0
CONFIG_LOG_COLORS=n

# WiFi 내부 로그 완전 비활성화
CONFIG_ESP_WIFI_LOG_DEFAULT_LEVEL_NONE=y
CONFIG_ESP_WIFI_LOG_LEVEL=0

# USB Serial/JTAG 콘솔 설정 (Ctrl+C 지원)
CONFIG_ESP_CONSOLE_USB_SERIAL_JTAG=y

# Main 태스크 스택 크기 (OBS WebSocket 클라이언트용)
CONFIG_ESP_MAIN_TASK_STACK_SIZE=16384

# CPU 클럭 속도 240MHz
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_240=y
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ=240

# Flash 속도 80MHz (QIO 모드)
CONFIG_ESPTOOLPY_FLASHFREQ_80M=y
CONFIG_ESPTOOLPY_FLASHMODE_QIO=y

# lwIP 네트워크 최적화
CONFIG_LWIP_UDP_RECVMBOX_SIZE=64
CONFIG_LWIP_TCPIP_RECVMBOX_SIZE=64

# 소켓 수신 버퍼 크기 증가
CONFIG_LWIP_SO_RCVBUF=y
CONFIG_LWIP_RECV_BUFSIZE_DEFAULT=8192

# TCP/IP 태스크 우선순위 (기본 18, 낮춤 → CPU 절약)
CONFIG_LWIP_TCPIP_TASK_PRIO=10

# IRAM 최적화 (핫 패스 함수를 IRAM에)
CONFIG_LWIP_IRAM_OPTIMIZATION=y

# FreeRTOS 틱 레이트 1000Hz (1ms 해상도)
CONFIG_FREERTOS_HZ=1000

# WiFi 전력 절약 비활성화 (저지연)
CONFIG_ESP_WIFI_SLP_IRAM_OPT=n
CONFIG_PM_ENABLE=n

# WiFi 성능 최적화
CONFIG_ESP_WIFI_IRAM_OPT=y
CONFIG_ESP_WIFI_RX_IRAM_OPT=y

# FreeRTOS 런타임 통계 비활성화 (CPU 사용률 측정 제거)
# CONFIG_FREERTOS_GENERATE_RUN_TIME_STATS is not set
# CONFIG_FREERTOS_USE_TRACE_FACILITY is not set
# CONFIG_FREERTOS_USE_STATS_FORMATTING_FUNCTIONS is not set
# CONFIG_FREERTOS_RUN_TIME_STATS_USING_ESP_TIMER is not set

# W5500 SPI Ethernet 지원
CONFIG_ETH_USE_SPI_ETHERNET=y
CONFIG_ETH_SPI_ETHERNET_W5500=y
